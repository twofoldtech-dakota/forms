.heroSection
  position relative
  padding-top 6rem
  padding-bottom 6rem
  
  @media (min-width: 768px)
    padding-top 8rem
    padding-bottom 8rem
    
  &::before
    content ''
    position absolute
    top 0
    left 0
    right 0
    height 100%
    background linear-gradient(to bottom right, rgba(var(--primary-500), 0.1), rgba(var(--primary-600), 0.1))
    z-index -1 